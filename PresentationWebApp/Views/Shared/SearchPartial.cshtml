<div class="col-7">
    <form class="form-inline" method="post" action="/Products/Search">
        <div class="col-auto">
            <label>Search:</label>
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <input type="text" class="form-control" placeholder="Type your keyword here" name="keyword" />
        </div>
        <button type="submit" class="btn btn-primary mb-2">Search</button>
    </form>
</div>

<div class="col-5">
    <form class="form-inline" method="post" action="/Products/CategoriesFilter">
        <div>
            <label class="mr-2"> Filter by category: </label>
        </div>
        <div class="form-group">
            <select class="form-control" name="category">
                @foreach (var cat in ViewBag.Categories)
                {
                    <option value="@cat.Id">@cat.Name</option>
                }
            </select>
        </div>

        <button type="submit" class="btn btn-outline-primary ml-1">Search</button>
    </form>
</div>